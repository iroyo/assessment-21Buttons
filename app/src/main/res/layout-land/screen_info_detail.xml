<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.detail.screen.InfoDetailScreen">

	<ImageView
		android:layout_width="0dp"
		android:layout_height="0dp"
		tools:srcCompat="@tools:sample/avatars[12]"
		android:id="@+id/imageCoverHero"
		android:scaleType="centerCrop"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintDimensionRatio="w,3:4"/>

	<ImageButton
		android:src="@drawable/ic_video"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/buttonVideo"
		android:padding="8dp"
		android:background="@android:color/transparent"
		app:layout_constraintTop_toTopOf="@+id/imageAvatar"
		app:layout_constraintBottom_toBottomOf="@+id/imageAvatar"
		app:layout_constraintStart_toEndOf="@+id/imageCoverHero"
		android:layout_marginLeft="8dp"
		android:layout_marginStart="8dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/textUserName"
		android:maxLines="1"
		android:textSize="18sp"
		android:textStyle="bold"
		android:textColor="@android:color/black"
		tools:text="@tools:sample/full_names"
		app:layout_constraintTop_toTopOf="@+id/imageAvatar"
		app:layout_constraintEnd_toStartOf="@+id/imageAvatar"
		android:layout_marginEnd="8dp"
		android:layout_marginRight="8dp"
		app:layout_constraintBottom_toTopOf="@+id/textUserCountry"
		android:layout_marginTop="8dp"
		app:layout_constraintVertical_chainStyle="spread"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/textUserCountry"
		android:maxLines="1"
		android:textColor="@android:color/black"
		tools:text="@tools:sample/cities"
		app:layout_constraintEnd_toStartOf="@+id/imageAvatar"
		android:layout_marginEnd="8dp"
		android:layout_marginRight="8dp"
		app:layout_constraintTop_toBottomOf="@+id/textUserName"
		app:layout_constraintBottom_toBottomOf="@+id/imageAvatar"/>

	<ImageView
		android:layout_width="0dp"
		android:layout_height="50dp"
		tools:src="@tools:sample/avatars"
		android:id="@+id/imageAvatar"
		android:scaleType="centerCrop"
		android:layout_marginTop="16dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintDimensionRatio="w,1:1"
		android:layout_marginEnd="16dp"
		android:layout_marginRight="16dp"/>

	<View
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:id="@+id/view"
		android:background="#F0F0F0"
		app:layout_constraintStart_toEndOf="@+id/imageCoverHero"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginTop="16dp"
		app:layout_constraintTop_toBottomOf="@+id/imageAvatar"
		app:layout_constraintEnd_toEndOf="parent"/>

	<TextView
		android:text="@string/primary_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/textView3"
		android:textStyle="bold"
		app:layout_constraintTop_toTopOf="@+id/view"
		app:layout_constraintBottom_toTopOf="@+id/textView4"
		app:layout_constraintVertical_chainStyle="spread"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		app:layout_constraintStart_toStartOf="@+id/view"/>

	<TextView
		android:text="@string/real_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/textView4"
		android:textStyle="bold"
		app:layout_constraintTop_toBottomOf="@+id/textView3"
		app:layout_constraintBottom_toTopOf="@+id/textView5"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		app:layout_constraintStart_toStartOf="@+id/view"/>

	<TextView
		android:text="@string/ingame_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/textView5"
		android:textStyle="bold"
		app:layout_constraintTop_toBottomOf="@+id/textView4"
		app:layout_constraintBottom_toBottomOf="@+id/view"
		app:layout_constraintStart_toStartOf="@+id/view"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"/>

	<TextView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:id="@+id/textRealTime"
		android:textStyle="italic"
		tools:text="@tools:sample/date/hhmm"
		app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
		app:layout_constraintStart_toStartOf="@+id/guidelineLimit"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		app:layout_constraintEnd_toEndOf="@+id/view"
		android:layout_marginEnd="16dp"
		android:layout_marginRight="16dp"/>

	<TextView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:id="@+id/textPrimaryTime"
		android:textStyle="italic"
		tools:text="@tools:sample/date/hhmm"
		app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
		app:layout_constraintStart_toStartOf="@+id/guidelineLimit"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginEnd="16dp"
		android:layout_marginRight="16dp"/>

	<TextView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:id="@+id/textIngameTime"
		android:textStyle="italic"
		tools:text="@tools:sample/date/hhmm"
		android:layout_marginEnd="16dp"
		app:layout_constraintEnd_toEndOf="@+id/view"
		android:layout_marginRight="16dp"
		app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
		app:layout_constraintStart_toStartOf="@+id/guidelineLimit"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"/>

	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/guidelineLimit"
		app:layout_constraintGuide_begin="440dp"
		android:orientation="vertical"/>

	<android.support.v4.widget.ContentLoadingProgressBar
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:padding="120dp"
		android:background="#F0F0F0"
		tools:visibility="gone"
		style="?android:attr/progressBarStyleLarge"
		android:visibility="visible"
		android:id="@+id/progressRun"
		app:layout_constraintStart_toEndOf="@+id/imageCoverHero"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginTop="16dp"
		app:layout_constraintTop_toBottomOf="@+id/imageAvatar"
		app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>